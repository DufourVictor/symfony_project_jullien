{% extends 'base.html.twig' %}
{% block title %}{{ 'app.profesional_referent.new.title'|trans }}{% endblock %}
{% block body %}
    <h1>{{ 'app.profesional_referent.new.add_referent'|trans }}</h1>
    <div class="row">
        {{ form_start(form) }}
        <div class="row">
            <div class="col s6">
                {{ form_row(form.firstName) }}
            </div>
            <div class="col s6">
                {{ form_row(form.lastName) }}
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                {{ form_row(form.email) }}
            </div>
            <div class="col s6">
                {{ form_row(form.phone) }}
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                {{ form_row(form.phone) }}
            </div>
        </div>
        <input type="submit" class="waves-effect waves-light btn indigo darken-4" value="{{ 'commons.submit'|trans }}"/>
    </div>
    {{ form_end(form) }}
{% endblock %}
