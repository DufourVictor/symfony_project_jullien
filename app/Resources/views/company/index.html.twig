{% extends 'base.html.twig' %}
{% block title %}{{ 'app.company.title'|trans }}{% endblock %}
{% block body %}
    <div class="row">
        <div class="col s6">
            <h1>{{ 'app.company.index.company_list'|trans }}</h1>
            <table>
                <thead>
                <tr>
                    <th>{{ 'app.company.index.name'|trans }}</th>
                    <th>{{ 'app.company.index.type'|trans }}</th>
                    <th>{{ 'app.company.index.turnover'|trans }}</th>
                    <th>{{ 'app.company.index.address'|trans }}</th>
                    <th>{{ 'app.company.index.phone_number'|trans }}</th>
                    <th>{{ 'commons.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for company in companies %}
                    <tr>
                        <td>{{ company.name }}</td>
                        <td>
                            {% if company.type is defined and company.type is not null %}
                                {{ company.type.name }}
                            {% endif %}
                        </td>
                        <td>{{ company.turnover }}</td>
                        <td>{{ company.address }}</td>
                        <td>{{ company.phoneNumber }}</td>
                        <td>
                            <a href="{{ path('entreprise_show', { 'id': company.id }) }}">{{ 'commons.read'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col s6">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.type) }}
            {{ form_row(form.turnover) }}
            {{ form_row(form.phoneNumber) }}
            {{ form_row(form.profesionnalReferent) }}
            {{ form_row(form.address) }}
            <input type="submit">
            {{ form_end(form) }}
            <a href="{{ path('profesionnalReferent_new') }}">{{ 'app.company.index.add_referent'|trans }}</a>
            <a href="{{ path('company_type_new') }}">{{ 'app.company.index.add_type'|trans }}</a>
        </div>
    </div>
{% endblock %}
