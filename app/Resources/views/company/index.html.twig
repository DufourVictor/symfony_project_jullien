{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s6">
            <h1>Liste des entreprises</h1>
            <table>
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Turnover</th>
                    <th>Address</th>
                    <th>Phonenumber</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for company in companies %}
                    <tr>
                        <td>{{ company.name }}</td>
                        <td>
                            {% if company.type is defined and company.type is not null %}
                                {{ company.type.name }}
                            {% endif %}
                        </td>
                        <td>{{ company.turnover }}</td>
                        <td>{{ company.address }}</td>
                        <td>{{ company.phoneNumber }}</td>
                        <td>
                            <a href="{{ path('entreprise_show', { 'id': company.id }) }}">Voir</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col s6">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.type) }}
            {{ form_row(form.turnover) }}
            {{ form_row(form.phoneNumber) }}
            {{ form_row(form.profesionnalReferent) }}
            {{ form_row(form.address) }}
            <input type="submit">
            {{ form_end(form) }}
            <a href="{{ path('profesionnalReferent_new') }}">Ajouter un référent</a>
        </div>
    </div>
{% endblock %}
