{% extends 'base.html.twig' %}
{% block title %}{{ 'app.educational_referent.edit.title'|trans }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="center-align">
            <h1>{{ 'app.educational_referent.edit.edit_educational_referent'|trans }}</h1>
        </div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col s4">
                {{ form_row(form.lastName) }}
            </div>
            <div class="col s4">
                {{ form_row(form.firstName) }}
            </div>
            <div class="col s4">
                {{ form_row(form.phone) }}
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                {{ form_row(form.username) }}
            </div>
            <div class="col s6">
                {{ form_row(form.email) }}
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                {{ form_row(form.plainPassword.first) }}
            </div>
            <div class="col s6">
                {{ form_row(form.plainPassword.second) }}
            </div>
        </div>
        <div class="center-align">
            <input type="submit" value="{{ 'commons.edit'|trans }}" class="waves-effect waves-green btn indigo darken-4"/>
            <a href="{{ path('referent_pedagogique_index') }}" class="waves-effect waves-green btn indigo darken-4">
                {{ 'commons.back_to_list'|trans }}
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
