{% extends 'base.html.twig' %}
{% block title %}{{ 'app.promote.index.title'|trans }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="center-align">
            <h1>{{ 'app.promote.index.school_list'|trans }}</h1>
            <a class="btn-floating btn-large waves-effect waves-light indigo darken-4 modal-trigger"
               href="#modal-add-promo">
                <i class="material-icons">add</i>
            </a>
        </div>
        <table class="responsive-table highlight striped">
            <thead>
            <tr>
                <th>{{ 'app.promote.index.year'|trans }}</th>
                <th>{{ 'commons.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for promote in promotes %}
                <tr>
                    <td>{{ promote.name }}</td>
                    <td>
                        <a class="btn-floating waves-effect waves-light btn red darken-4 modal-trigger"
                           href="#modal-delete-promo-{{ promote.id }}">
                            <i class="material-icons">delete</i>
                        </a>
                        {#Modal supprimer#}
                        <div id="modal-delete-promo-{{ promote.id }}" class="modal modal-fixed">
                            <div class="modal-content">
                                <div class="center-align">
                                    <h4>{{ 'app.promote.index.delete_promote'|trans }}</h4>
                                    <a href="{{ path('promo_delete', {'id': promote.id }) }}" class="waves-effect waves-light btn red darken-4">
                                        {{ 'commons.delete'|trans }}
                                    </a>
                                    <a href="#" class="modal-action modal-close waves-effect waves-green btn indigo darken-4">
                                        {{ 'commons.back'|trans }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {# Modal ajout #}
    <div id="modal-add-promo" class="modal modal-fixed">
        {{ form_start(form) }}
        <div class="modal-content">
            <div class="center-align">
                <h4>{{ 'app.promote.index.add_year'|trans }}</h4>
            </div>
            {{ form_widget(form) }}
            <input type="submit" value="{{ 'commons.add'|trans }}" class="waves-effect waves-light btn indigo darken-4"/>
            {{ form_end(form) }}
            <a href="#" class="modal-action modal-close waves-effect waves-green btn red darken-4">
                {{ 'commons.back'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/modal.js') }}"></script>
{% endblock %}
