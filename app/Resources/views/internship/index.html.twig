{% extends 'base.html.twig' %}
{% block title %}Stages - Recherche{% endblock %}
{% block body %}
    <h3>Gestion des stages</h3>
    <h5>Rechercher un élève</h5>

    <div class="container-form">
        <div class="row">
            {{ form_start(form) }}
            <div class="row">
                <div class="col m4 offset-m4">
                    {{ form_row(form.classroom) }}
                </div>
            </div>
            <div class="row">
                <div class="col m4 offset-m4">
                    {{ form_row(form.student) }}
                </div>
            </div>
            <div class="row">
                <div class="col m4 offset-m4">
                    <button type="submit" class="btn waves-effect waves-light indigo darken-4">
                        Rechercher
                        <i class="material-icons">search</i>
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
