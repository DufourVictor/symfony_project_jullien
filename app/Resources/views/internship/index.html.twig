{% extends 'base.html.twig' %}
{% block title %}Stages - Recherche{% endblock %}
{% block body %}
    <h3>{{ 'app.internship.index.internship_management'|trans }}</h3>
    <h5>{{ 'app.internship.index.search_student'|trans }}</h5>

    <div class="container-form">
        <div class="row">
            {{ form_start(form) }}
            <div class="row classroom">
                <div class="col m4 offset-m4">
                    {{ form_row(form.classroom) }}
                </div>
            </div>
            <div class="row">
                <div class="col m4 offset-m4">
                    {{ form_widget(form.student, {'attr': {'class': 'student'}}) }}
                    <div class="row col s12">
                        <div class="input-field" id="student">
                            <select>
                                <option disabled selected>Élèves</option>
                            </select>
                            <label>Élèves</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col m4 offset-m4">
                    <button type="submit" class="btn waves-effect waves-light indigo darken-4">
                        {{ 'commons.search'|trans }}
                        <i class="material-icons">search</i>
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
