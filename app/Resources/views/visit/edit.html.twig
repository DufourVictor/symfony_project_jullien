{% extends 'base.html.twig' %}
{% block title %}{{ "app.visit.edit.title"|trans }}{% endblock %}
{% block body %}
    <h3>{{ "app.visit.edit.edit_visit"|trans }}</h3>

    <div class="container-form">
        <div class="row">
            {{ form_start(form) }}
            <div class="row">
                <div class="col m4 offset-m4">
                    {{ form_row(form.dateVisit, {"attr": {"class": "datepicker"}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col m4 offset-m4">
                    <div class="input-field">
                        {{ form_widget(form.comment, {"attr": {"class": "materialize-textarea"}}) }}
                        {{ form_label(form.comment) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col m4 offset-m4">
                    <button type="submit" class="btn waves-effect waves-light indigo darken-4">
                        {{ 'commons.edit'|trans }}
                        <i class="material-icons">mode_edit</i>
                    </button>
                    <button class="btn waves-effect waves-light red darken-3 back">
                        <a href="{{ path('stage_show', {'id': internship.id }) }}">
                            {{ "commons.back"|trans }}
                            <i class="material-icons">settings_backup_restore</i>
                        </a>
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
