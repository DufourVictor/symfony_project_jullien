{% extends 'base.html.twig' %}
{% block title %}Élève - Recherche{% endblock %}
{% block body %}
    <h1>Suivi de scolarité</h1>
    <h3>Rechercher une classe</h3>
    <div class="container">
        <div class="row">
            {{ form_start(form) }}
            <div class="row">
                <div class="col s6">
                    {{ form_widget(form.classroom) }}
                </div>
                <div class="col s6">
                    <a href="{{ path('classe_new') }}" class="waves-effect waves-light btn indigo darken-4">Ajouter une
                        classe</a>
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    {{ form_widget(form.student) }}
                </div>
                <div class="col s6">
                    <a href="{{ path('student_add') }}" class="waves-effect waves-light btn indigo darken-4">Ajouter un élève</a>
                </div>
            </div>
                <input type="submit" class="waves-effect waves-light btn indigo darken-4" value="Rechercher"/>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
