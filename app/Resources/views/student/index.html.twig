{% extends 'base.html.twig' %}
{% block title %}{{ 'app.student.index.title'|trans }}{% endblock %}
{% block body %}
        <h3>{{ 'app.student.index.follow_school'|trans }}</h3>
        <h5>{{ 'app.student.index.search_classroom'|trans }}</h5>

        <div class="container-form">
            <div class="row">
                {{ form_start(form) }}
                <div class="row classroom">
                    <div class="col m4 offset-m4">
                        {{ form_widget(form.classroom, {"attr": {
                            "class": "select",
                            "data-url": path("students")
                        }}) }}
                    </div>
                    <a href="{{ path('classe_new') }}" class="btn-floating btn-large waves-effect waves-light indigo darken-4 first">
                        <i class="material-icons">add</i>
                    </a>
                </div>
                <div class="row">
                    <div class="col m4 offset-m4">
                        {{ form_widget(form.student, {"attr": {"class": "student"}}) }}
                        <div class="input-field" id="student">
                            <select name="register_selector[student]" class="select">
                                <option disabled selected>{{ 'app.student.index.students'|trans }}</option>
                            </select>
                            <label>{{ 'app.student.index.students'|trans }}</label>
                        </div>
                    </div>
                    <a href="{{ path('student_add') }}" class="btn-floating btn-large waves-effect waves-light indigo darken-4 second">
                        <i class="material-icons">add</i>
                    </a>
                </div>
                <div class="row">
                    <div class="col m4 offset-m4">
                        <button type="submit" class="btn waves-effect waves-light indigo darken-4">
                            {{ 'commons.search'|trans }}
                            <i class="material-icons">search</i>
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
