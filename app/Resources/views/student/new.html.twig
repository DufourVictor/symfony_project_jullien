{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ajouter un élève</h1>
    <div class="row">
        {{ form_start(form) }}
        <div class="row">
            <div class="col s6">
                {{ form_row(form.lastName) }}
            </div>
            <div class="col s6">
                {{ form_row(form.firstName) }}
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                {{ form_row(form.address) }}
            </div>
            <div class="col s6">
                {{ form_row(form.email) }}
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                {{ form_row(form.phone) }}
            </div>
            <div class="col s6">
                <ul id="certificate-fields-list" data-length="{{ form.certificate|length }}"
                    data-prototype="{{ form_widget(form.certificate.vars.prototype)|e }}">
                    {% for certificate in form.certificate %}
                        {{ form_row(certificate) }}
                    {% endfor %}
                </ul>
                <a href="#" id="add-another-certificate">Ajouter un Bac</a>
            </div>
        </div>
        <input type="submit" class="waves-effect waves-light btn indigo darken-4" value="Valider"/>
    </div>
    {{ form_end(form) }}
{% endblock %}
