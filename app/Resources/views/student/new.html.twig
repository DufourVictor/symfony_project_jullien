{% extends 'base.html.twig' %}
{% block title %}{{ 'app.student.new.title'|trans }}{% endblock %}
{% block body %}
    <h3>{{ 'app.student.new.add_student'|trans }}</h3>

    <div class="container-form">
        <div class="row">
            {{ form_start(form) }}
            <div class="row">
                <div class="col offset-m2 m4 s12">
                    <div class="input-field">
                        {{ form_row(form.lastName) }}
                    </div>
                </div>
                <div class="col m4 s12">
                    <div class="input-field">
                        {{ form_row(form.firstName) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col offset-m2 m4 s12">
                    <div class="input-field">
                        {{ form_row(form.address) }}
                    </div>
                </div>
                <div class="col m4 s12">
                    <div class="input-field">
                        {{ form_row(form.email) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col offset-m2 m4 s12">
                    <div class="input-field">
                        {{ form_row(form.phone) }}
                    </div>
                </div>
                <div class="col m4 s12">
                    <ul id="certificate-fields-list" data-length="{{ form.certificate|length }}"
                        data-prototype="{{ form_widget(form.certificate.vars.prototype)|e }}">
                        {% for certificate in form.certificate %}
                            {{ form_row(certificate) }}
                        {% endfor %}
                    </ul>
                    <a href="#" id="add-another-certificate">{{ 'app.student.new.add_certificate'|trans }}</a>
                </div>
            </div>
            <div class="row">
                <div class="col offset-s2 s8">
                    <button type="submit" class="waves-effect waves-light btn indigo darken-4">
                        {{ 'commons.submit'|trans }}
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
