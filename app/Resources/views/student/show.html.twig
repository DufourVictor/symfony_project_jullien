{% extends 'base.html.twig' %}
{% block title %}
    Stage - détail
{% endblock %}
{% block body %}
    <h1>{{ student.fullName }}</h1>
    <h3>Informations</h3>
    {{ form_start(form) }}
    <div class="row">
        <div class="col s6">
            {{ form_row(form.lastName) }}
        </div>
        <div class="col s6">
            {{ form_row(form.firstName) }}
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            {{ form_row(form.phone) }}
        </div>
        <div class="col s6">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            {{ form_row(form.address) }}
        </div>
        {% for certificate in form.certificate %}
            <div class="col s6">
                {{ form_row(certificate) }}
            </div>
        {% endfor %}
    </div>
    <input type="submit" class="waves-effect waves-light btn indigo darken-4" value="Modifier"/>
    {{ form_end(form) }}
    <table>
        <thead>
        <tr>
            <th>Année</th>
            <th>Classe</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for classroom in class %}
            <tr>
                <td>{{ classroom.date|date('Y') }}</td>
                <td>{{ classroom.certificate.name }}</td>
                <td> <a href="{{ path('classe_show', {'id': classroom.certificate.id}) }}">Voir</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
